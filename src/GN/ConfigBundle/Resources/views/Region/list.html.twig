<div class="clearfix">
    <a id="addNew" class="btn btn-danger btn-flat pull-right" href="{{ path('parametro_region_new', { 'table': table }) }}"
       title="Agregar Nuevo"><i class="fa fa-plus"></i> &nbsp;Agregar</a>
</div>
<br>
<table id="tablelist" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="nosort"></th>
            <th>Nombre</th>
                {% if table != 'Pais'%}
                    {% if table != 'Provincia'%}
