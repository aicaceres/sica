                        <th>Provincia</th>
                    {% endif %}
                    <th>Pais</th>
                {% endif %}
            <th class="nosort">Acciones</th>
        </tr>
    </thead>
    <tbody>
               {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.name }}</td>
               {% if table != 'Pais'%}
                {% if table != 'Provincia'%}
            <td>{{ entity.codpostal }}</td>
            <td>{{ entity.provincia }}</td>
            <td>{{ entity.provincia.pais }}</td>
                {% else %}
            <td>{{ entity.pais }}</td>
                {% endif %}
               {% endif %}
            <td class="link-actions">
                <a href="{{ path('parametro_region_edit', { 'table': table, 'id': entity.id }) }}" title="Editar"><i class="fa fa-edit"></i></a>&nbsp;
                <a href="{{ path('parametro_region_delete', { 'table': table, 'id': entity.id }) }}" title="Eliminar"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
               {% endfor %}
    </tbody>
</table>
