{% extends "AdminBundle::layout.html.twig" %}
{% block stylesheets %}
{{ parent() }}
<!-- DATA TABLES -->
<link href="{{ asset('assets/css/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% set table = app.request.attributes.get('table') %}


{% block content %}
<div class='row'>
    <div class='col-md-12'>
        <div class="box box-solid">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-3 col-sm-4">
                        <div class="box-header">
                            <i class="fa fa-globe"></i>
                            <h3 class="box-title">Región</h3>
                        </div>
                        <!-- Navigation - folders-->
                        <div style="margin-top: 15px;">
                            <ul class="nav nav-pills nav-stacked" id="tab-parametro">
                                <li class="header">Seleccionar</li>
                                <li><a href="{{ path('parametro_region',{ 'table': 'Localidad' }) }}"><i class="fa fa-globe"></i> Localidad </a></li>
                                <li><a href="{{ path('parametro_region',{ 'table': 'Provincia' }) }}"><i class="fa fa-globe"></i> Provincia</a></li>
                                <li><a href="{{ path('parametro_region',{ 'table': 'Pais' }) }}"><i class="fa fa-globe"></i> País</a></li>
                            </ul>
                        </div>
                    </div><!-- /.col (LEFT) -->
                    <div class="col-md-9 col-sm-8">

                        <div class='box box-solid box-primary'>
                            <div class='box-header'>
                                <h3 class='box-title'>{% if title == 'Pais'%}País{% else %}{{title}}{% endif %}</h3>
                            </div><!-- /.box-header -->
                            <div class='box-body pad'>
                                {% include "AdminBundle::form-notification.html.twig" %}
                                <div class="box-body table-responsive">
                                        <!-- content -->
                                </div>
                            </div>
                        </div><!-- /.box -->
                    </div><!-- /.col (RIGHT) -->
                </div><!-- /.row -->
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col-->
</div><!-- ./row -->
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript">
$(document).ready(function() {
    $('.table-responsive').html({{ html|raw }});
    $('.nav-pills a[href$="' + "{{ table }}" + '"]').parent('li').addClass('active');
});
</script>
{% endblock %}