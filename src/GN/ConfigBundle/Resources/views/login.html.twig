{% extends "::base.html.twig" %}
{% block body %}
<body class="bg-black">
    <div class="form-box" id="login-box">
        <div class="header">
            <img src="{{ asset('assets/img/sica_logo.jpg') }}" class="img-square" alt="Si.C.A." />
        </div>
        <form action="{{ path("check_path") }}" method="post">
            <div class="body bg-gray">
                {% if error %}
                    <div class="callout callout-danger">{{ error.message|trans }}</div>
                {% endif %}
                <div class="form-group">
                    <input type="text" name="_username" class="form-control" value="admin" placeholder="Nombre de usuario"/>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" value="admin" placeholder="ContraseÃ±a"/>
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn btn-danger btn-block">Ingresar</button>
            </div>
        </form>
    </div>
</body>
{% endblock %}