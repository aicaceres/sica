<!-- Left side column. contains the logo and sidebar -->
<aside class="left-side sidebar-offcanvas">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="{{ asset('assets/img/logo2.png') }}" class="img-square" alt="Sistema de Gestión Notarial" />
            </div>
            <div class="pull-left info">
                <p>{% if app.user %}{{ app.user.username }}{% endif %}</p>

                <a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> Cerrar Sesión</a>
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li id="homepage">
                <a href="{{ path('admin_homepage') }}">
                    <i class="fa fa-home"></i> <span>Inicio</span>
                </a>
            </li>
            <li class="treeview">
                <a href="javascript:void(0)">
                    <i class="fa fa-file-text"></i>
                    <span>Informes</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li id="tareas"> <a href="{{ path('informe_tareas') }}"><i class="fa fa-angle-double-right"></i> Tareas</a></li>
