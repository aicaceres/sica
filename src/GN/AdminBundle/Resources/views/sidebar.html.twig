                <a href="javascript:void(0)">
                    <i class="fa fa-lock"></i>
                    <span>Seguridad</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li id="usuario">   <a href="{{ path('seguridad_usuario') }}"><i class="fa fa-angle-double-right"></i> Usuarios</a></li>
                    <li id="inicio">   <a href="{{ path('config_inicio') }}"><i class="fa fa-angle-double-right"></i> Parámetros</a></li>
                </ul>
            </li>
 {% endif %}
